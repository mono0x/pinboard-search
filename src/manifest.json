{
  "manifest_version": 2,
  "name": "Pinboard Search",
  "version": "0.2.0",
  "description": "Search Pinboard in Omnibox",
  "background": {
    "scripts": [
      "lib/jquery-1.8.2.min.js",
      "lib/utils.js",
      "lib/pinboard.js",
      "lib/migemo.js",
      "lib/omnibox.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "omnibox": {
    "keyword": "p"
  },
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "unlimitedStorage",
    "https://api.pinboard.in/v1/posts/update",
    "https://api.pinboard.in/v1/posts/all"
  ]
}
